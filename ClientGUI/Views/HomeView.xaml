<UserControl x:Class="ClientGUI.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientGUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label x:Name="label" Content="{Binding Username}" HorizontalAlignment="Left" Margin="185,151,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label x:Name="label1" Content="{Binding IP}" HorizontalAlignment="Left" Margin="166,205,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Button x:Name="button" Content="Send" Command="{Binding SendMessage}" HorizontalAlignment="Left" Margin="286,392,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="26,393,0,0" Text="{Binding Message}" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" VerticalAlignment="Top" Width="223"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="26,43,0,0" Text="{Binding History}" TextWrapping="Wrap" VerticalAlignment="Top" Height="272" Width="291" Background="White"/>
    </Grid>
</UserControl>
