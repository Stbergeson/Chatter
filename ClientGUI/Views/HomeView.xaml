             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientGUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label x:Name="label" Content="{Binding connection.Username}" HorizontalAlignment="Left" Margin="185,166,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="{Binding connection.IP}" HorizontalAlignment="Left" Margin="166,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
